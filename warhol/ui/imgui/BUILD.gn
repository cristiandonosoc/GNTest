source_set("imgui") {
  public = [
    "def.h",
    "imgui.h",
    "helpers.h",
  ]

  sources = [
    "helpers.cc",
    "imgui.cc",
    "imgui_renderer.cc",
    "imgui_renderer.h",
    "imgui_shaders.cc",
    "imgui_shaders.h",
  ]

  public_configs = [
    ":renderer_macros",
  ]

  deps = [
    "//warhol/window/common",
    "//warhol/input",
    "//warhol/utils",
    "//warhol/graphics/common:render_command"
  ]

  public_deps = [
    "//third_party/imgui",
  ]
}

# Adds common config to key out functionality
config("renderer_macros") {
  defines = []

  if (opengl_enabled) {
    defines += [ "WARHOL_OPENGL_ENABLED" ]
  }

  if (vulkan_enabled) {
    defines += [ "WARHOL_VULKAN_ENABLED" ]
  }
}
