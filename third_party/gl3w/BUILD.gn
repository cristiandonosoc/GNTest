config("gl3w_config") {
  # So includes like <GL/gl3w.h> works.
  include_dirs = [ "//third_party/include" ]
}

source_set("gl3w") {
  sources = [
    "gl3w.c",
  ]
  public = [
    "gl3w.h",
  ]
  if (target_os == "linux") {
    libs = [ "-ldl" ]
  }
  configs += [
    ":gl3w_config",
  ]
}
