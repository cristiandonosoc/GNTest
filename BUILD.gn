config("default_include_dirs") {
  include_dirs = [
    "${root_build_dir}",
    "//",
    "//src",
    root_gen_dir,
  ]

  if (target_os == "linux") {
    include_dirs += [
      "/usr/include",
    ]
  }
}

group("default") {
  deps = [
    "//src:opengl_example",
  ]
}

group("imgui_example") {
  deps = [
    "//third_party/imgui/examples:imgui_example",
  ]
}


