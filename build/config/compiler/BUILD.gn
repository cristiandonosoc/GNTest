if (is_windows) {
  config("default_warnings") {
    cflags = [
      "/W4",
      "/WX",
    ]
  }

  config("compiler") {
    cflags = [
      # Warning ignores
      "/wd4700",    # Un-initialized variable
    ]

    cflags_cc = []


    cflags_cc += [
      "/std:c++14",
      "/EHsc",
      "/GR-",
    ]
  }

  config("no_optimize") {
    cflags = [ "/Od" ]
  }

  config("optimize") {
    cflags = [ "/O2" ]
  }

  config("symbols") {
    cflags = [ "/Zi" ]
  }
}


