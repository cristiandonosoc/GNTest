
source_set("utils") {
  sources = [
    "status.cc",
    "status.h",
  ]
}

source_set("socket") {
  sources = [
    "socket.cc",
    "socket.h",
  ]
  deps = [
    ":utils",
  ]
}

config("win_socks") {
  libs = [ "Ws2_32.lib" ]
}

executable("server") {
  sources = [
    "server_main.cc",
  ]
  configs += [ ":win_socks" ]
  deps = [
    ":socket",
  ]
}

executable("client") {
  sources = [
    "client_main.cc",
  ]
  configs += [ ":win_socks" ]
  deps = [
    ":socket",
  ]
}

executable("test") {
  sources = [ "test_main.cc" ]
  deps = [
    ":utils",
    "//third_party/stb",
  ]
}
