source_set("networking") {
  sources = [
    "socket.cc",
    "socket.h",
  ]
}


executable("hello_world") {
  sources = [
    "hello_world.cc",
  ]
  deps = [
    ":networking",
  ]
}

config("win_socks") {
  libs = [ "Ws2_32.lib" ]
}

executable("socket_main") {
  sources = [
    "socket_main.cc",
  ]
  configs += [ ":win_socks" ]
}
